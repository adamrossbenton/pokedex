<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")  %> 
</head>
<body>
    <header id="index-header">
        <h1>POKEDEX</h1>
        <form action="/pokedex/new">
            <input type="submit" value="Add New Pokemon">
        </form>
    </header>
    <div id="index-top-container">
        <div id="index-entries-container">
            <% for (let i = 0; i < pokedex.length; i++) { %>
                <div id="index-individual-container">
                    <a href="/pokedex/<%= i %>"><img src="<%= pokedex[i].img %> " class="index-pkmn-img"></a>
                    <table class="index-pkmn-info">
                        <tr>
                            <td>Name:</td>
                            <td><%= pokedex[i].name %> </td>
                        </tr>
                        <tr>
                            <td>Type:</td>
                            <td><%= pokedex[i].type %> </td>
                        </tr>
                    </table>
                    <div id="show-edit-and-delete-buttons">
                        <form action="/pokedex/<%= i %>/edit">
                            <input type="submit" value="Edit Pokemon">
                        </form>
                        <form action="/pokedex/<%= i %>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete Pokemon">
                        </form>
                    </div>    
                </div>
            <% } %> 
        </div>
    </div>
</body>
</html>